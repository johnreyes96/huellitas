@model huellitas.API.Models.AppointmentViewModel

@{
    ViewData["Title"] = "AddAppointment";
}

<h3>Nueva Cita</h3>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="AddAppointment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />

            <partial name="_Appointment" />

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Appointments" asp-route-id="@Model.UserId" class="btn btn-success">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}