
@model huellitas.API.Models.PetPhotoViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Adicionar</h2>

<h4>Foto Mascota</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="AddPetImage" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PetId" />

            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="EditPet" asp-route-id="@Model.PetId" class="btn btn-success">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



